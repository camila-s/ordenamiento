	printf("\t**\t4. Quicksort                                    **\n");
	printf("\t**\t5. Mergesort                                    **\n");
	printf("\t**********************************************************\n");
	printf("\n *Opcion: ");
	scanf("%d", &Opc);
	
	switch(Opc){
		
		case 1:CargarVector(v,cantidad);
		burbuja(v, cantidad);
	    for(int i=0;i<cantidad;i++){
		printf("\t %d ,",v[i]);
	}
	        break;
	        
	    case 2:CargarVector(v,cantidad);
		Insercion(v,cantidad);
	    for(int i=0;i<cantidad;i++){	
		printf("\t %d ,",v[i]); 
	}
         break; 
	   
	     case 3: CargarVector(v,cantidad);
	    nromax = cantidad;
		seleccion(v,nromax);
	    for(int i=0;i<cantidad;i++){	
		printf("\t %d ,",v[i]);
	}
	   break;
	        
	    case 4: CargarVector(v,cantidad);
	    nromax = cantidad;
		miquicksort(v,nromin,nromax-1);
		for(int i=0;i<cantidad;i++){	
		printf("\t %d ,",v[i]);
	}
	 break;
	        
	    case 5:CargarVector(v,cantidad);
	    nromax = cantidad;
		mergeSort(v,nromin,nromax-1);
	    for(int i=0;i<cantidad;i++)	
		printf("\t %d ,",v[i]);
	}
		break;
	        
	    default:
                printf("LA OPCION ELEGIDA NO ES CORRECTA.");
                printf("Por favor, seleccione una opciÃ³n dentro de las proporcionadas.");
