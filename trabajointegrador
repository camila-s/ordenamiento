#include "Ordenamientos.h"
void CargarVector(int v[],int &cantidad);


main(){
	int v[500],Opc,cantidad, nromax,nromin =0,m;
	
	printf("\n\t**********************************************************\n");
	printf("\t**\t\t\t\ MENU PRINCIPAL\t\t\t**\n");
