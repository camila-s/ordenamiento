}

void CargarVector(int v[],int &cantidad){
	printf("\n *Ingrese la cantidad de datos a proporcionar: ");
    scanf("%d",&cantidad);
    printf("\n");
	for(int i= 0; i <cantidad ; i++)
	printf("\n *Ingrese un numero: ");
	        scanf("%d", &v[i]);
	}
}
